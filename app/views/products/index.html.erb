  <center><h1>All Products</h1></center>
<div class="container mt-5 d-flex justify-content-between">
  <div class="container">
    <% @products.each do |product| %>
      <h5>Name: <%= product.name %></h5>
      <h5>Unit Price: <%= number_to_currency(product.price) %></h5>
      <p>
        <%= link_to "Edit", edit_product_path(product), class: "btn btn-primary", style:"background-color:blue" %>
        <%= link_to "Delete", product_path(product), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary", style:"background-color:red" %>
        <%= button_to "Add to cart", cart_items_path(:product_id => product.id) %>
      </p>
      <hr>
    <% end%>
    <br>
    <%= link_to "Add New Product", new_product_path, class: "btn btn-primary", style:"background-color:blue" %>
  </div>
  <div class="container mt-5">
    <%= link_to "Go to Cart", cart_path(@current_cart), class: "btn btn-primary", style:"background-color:blue" %>
  </div>
</div>
